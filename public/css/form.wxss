.from_con {
    display: block;
    width: 100%;
}

.from_item {
    height: 100rpx;
    font-size: 28rpx;
    line-height: 100rpx;
    color: #333;
    border-bottom: 1rpx solid #f0f0f0;
    display: flex;
    display: -webkit-flex;
    align-items: center;
}

.from_item_input{
    flex: 1;
}

.from_item_text{
    margin-left: 10rpx;
}

.from_item_image {
    width: 45rpx;
    height: 45rpx;
}

.from_textarea {
    height: 200rpx;
    padding-bottom: 20rpx;
}

.from_textarea textarea {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 20rpx;
}