page {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

.content {
  width: 100%;
  height: 100%;
}

/*头部商店介绍*/

.store-intro {
  width: 100%;
  background-color: #fff;
}

.store-cover {
  height: 160rpx;
}

.store-cover-image {
  width: 100%;
  height: 100%;
  filter: blur(2px);
  -webkit-filter: blur(2px);
}

.store-detail {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  padding: 76rpx 10px 0;
}

.store-avatar {
  border-radius: 3px;
}

.store-avatar-image {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  top: -84rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 3px;
}

.store-collection {
  position: absolute;
  text-align: center;
  line-height: 60rpx;
  width: 60rpx;
  height: 60rpx;
  right: 40rpx;
  top: 0;
  transform: translateY(-50%);
  background-color: #fff;
  border-radius: 50%;
}

.store-name, .store-name-modal {
  width: 100%;
  box-sizing: border-box;
  padding: 0 0 10px 0;
  font-size: 38rpx;
  font-weight: 700;
  text-align: center;
  line-height: 1;
}

.store-name::after {
  content: "";
  display: inline-block;
  width: 0;
  height: 0;
  border-width: 14rpx 0 14rpx 14rpx;
  border-style: solid;
  border-color: transparent transparent transparent rgba(0, 0, 0, 0.6);
}

.store-score {
  display: flex;
  font-size: 24rpx;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 0 5px 5px;
  color: rgba(0, 0, 0, 0.8);
}

.store-score text {
  padding-right: 5px;
}

.stroe-desc {
  text-align: center;
  width: 80%;
  font-size: 24rpx;
  margin: 0 auto;
  color: rgba(0, 0, 0, 0.6);
}

.stroe-activity {
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.stroe-swiper {
  flex: 1;
  height: 100%;
}

.sanjiao {
  position: absolute;
  width: 0;
  height: 0;
  border-width: 14rpx 0 14rpx 14rpx;
  border-style: solid;
  border-color: transparent transparent transparent rgba(0, 0, 0, 0.6);
  right: 25px;
}

.stroe-swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  line-height: 34rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  padding: 8rpx 30px;
}

.activity-type {
  color: #fff;
  background-color: #f70;
  padding: 0 5px;
  border-radius: 2px;
}

.activity-about {
  margin-left: 5px;
  color: rgba(0, 0, 0, 0.6);
}

/*shop-tab开始*/

.shop-tab {
  width: 100%;
  height: 40px;
  font-size: 28rpx;
  line-height: 40px;
  text-align: center;
  display: flex;
  background-color: #fff;
}

.shop-tab-item {
  flex: 1;
  color: #a6a6a6;
}

.tab-text {
  display: inline-block;
  height: 100%;
  box-sizing: border-box;
  padding: 0 6px;
}

.shop-tab-active {
  color: #666;
  border-bottom: 2px solid #ffd161;
}

/*shop-tab结束*/

/*轮播图开始*/

.the-swiper {
  width: 100%;
  height: calc(100% - 40px);
  position: relative;
}

.swiper-item-goods {
  width: 100%;
  height: 100%;
  display: flex;
  box-sizing: border-box;
  padding-bottom: 45px;
}

/*轮播图结束*/

/*商品展示开始*/

.good-classify, .good-content {
  height: 100%;
}

/*左边scroll-view 开始*/

.good-classify {
  width: 20%;
  background-color: #f0f0f0;
}

.good-classify-item {
  width: 100%;
  box-sizing: border-box;
  padding: 12px 10px;
  font-size: 24rpx;
  line-height: 1.4;
  color: #8a8a8a;
}

.classify-item-active {
  background-color: #fff;
  color: #333;
}

/*左边scroll-view 结束*/

/*右边scroll-view 开始*/

.good-content {
  width: 80%;
  background-color: #fff;
}

.classify {
  width: calc(100% - 6px);
  padding: 10rpx 0;
  margin-left: 6px;
  font-size: 26rpx;
  height: 50rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.classify text {
  display: inline-block;
  width: 100%;
  height: 100%;
  line-height: 30rpx;
  margin-left: 10rpx;
}

.classify::before {
  content: "";
  display: inline-block;
  width: 0;
  height: 0;
  border-width: 7px 0 7px 7px;
  border-style: solid;
  border-color: transparent transparent transparent #ffd161;
}

.recommend-title {
  padding: 0 0 10px;
}

.cart-list {
  width: calc(100% - 6px);
  padding: 5px 0;
  margin-left: 6px;
  display: flex;
}

.good-pic {
  width: 200rpx;
  height: 200rpx;
}

.good-image {
  width: 100%;
  height: 100%;
}

.good-intro {
  padding: 0 6px;
  box-sizing: border-box;
  flex: 1;
}

.title {
  font-size: 28rpx;
  font-weight: 700;
  line-height: 1.4;
}

.good-desc {
  margin: 5px 5px 0 0;
  line-height: 15px;
  font-size: 22rpx;
  color: #a9a9a9;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.sale-situation {
  padding: 5px 0;
  box-sizing: border-box;
  font-size: 18rpx;
  color: #999;
  min-height: 10px;
}

.sale-situation text:first-child {
  padding-right: 3px;
}

.sale-situation text:last-child {
  padding-left: 3px;
}

.good-activity {
  font-size: 18rpx;
  color: #ff5339;
}

.good-activity text:first-child {
  padding-right: 3px;
}

.good-activity text:last-child {
  padding-left: 3px;
}

.list-bottom {
  display: flex;
}

.price, .add-count {
  flex: 1;
}

.price {
  color: #ff5339;
}

.after-price {
  padding: 10px 3px 10rpx 0;
  box-sizing: border-box;
  font-size: 32rpx;
}

.after-price::before {
  content: "￥";
  font-size: 24rpx;
}

.before-price {
  padding: 10px 0 10rpx 3px;
  box-sizing: border-box;
  font-size: 24rpx;
  text-decoration: line-through;
}

.before-price::before {
  content: "￥";
  font-size: 20rpx;
}

.add-count {
  display: flex;
  box-sizing: border-box;
  flex-direction: row-reverse;
  padding: 10rpx;
  position: relative;
}

/*商品展示结束*/

/*底部结算页面开始*/

.cart-nav {
  width: 100%;
  height: 45px;
  display: flex;
  position: fixed;
  background-color: #474747;
  bottom: 0;
  left: 0;
  z-index: 9999;
}

.cart-icon {
  flex: 3;
  display: flex;
}

.cart-icon-left {
  width: 65px;
  height: 60px;
  box-sizing: border-box;
  padding: 0 10px 10px;
  transform: translateY(-5px);
}

.my-icon {
  width: 45px;
  height: 45px;
  text-align: center;
  line-height: 45px;
  border-radius: 50%;
  background-color: #666;
}

.cart-content {
  flex: 1;
  box-sizing: border-box;
  padding-left: 5px;
}

.no-good {
  font-size: 24rpx;
  line-height: 45px;
  color: #767676;
}

.good-price {
  height: 25px;
  color: #fff;
  font-size: 16px;
  line-height: 30px;
}

.good-tips {
  height: 20px;
  font-size: 12px;
  line-height: 15px;
  color: #767676;
}

.cart-account {
  flex: 1;
  text-align: center;
  line-height: 45px;
  font-size: 28rpx;
  font-weight: 700;
  background-color: #535356;
  color: #999;
}

.cart-ative {
  background-color: #ffd161;
  color: #333;
}

.icon-active {
  background-color: #ffd161;
}

/*底部结算页面结算*/

/*已选商品展示*/

.cart-about {
  width: 100%;
  max-height: 300px;
}

.cart-about-top {
  display: flex;
  height: 60rpx;
  background-color: #f0f0f0;
  color: #666;
  box-sizing: border-box;
  padding: 0 10px;
  line-height: 60rpx;
  font-size: 24rpx;
}

.about-top-left {
  flex: 1;
}

.about-top-right {
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
}

.clear-cart {
  width: auto;
  height: 100%;
  padding-left: 5px;
}

.clear-icon {
  line-height: 65rpx;
}
.cart-about-list{
  max-height: calc(300px - 60rpx)
}
.about-list-item {
  width: 100%;
  padding: 5px 10px;
  display: flex;
  box-sizing: border-box;
  margin-bottom: 5px
}

.about-item-name {
  font-size: 28rpx;
  flex: 2;
}

.about-item-title {
  display: flex;
 
  align-items: center;
  font-size: 32rpx;
  
}

.about-item-sort {
  display: flex;
  align-items: center;
  color: #666;
}

.about-item-price {
  flex: 1;
  text-align: right;
  color: #ff5339;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}

.about-before-price {
  display: inline-block;
  padding-right: 5px;
  font-size: 24rpx;
  text-decoration: line-through;
}

.about-before-price::before {
  content: "￥";
  font-size: 24rpx;
}

.about-after-price {
  display: inline-block;
  padding-right: 5px;
  font-size: 28rpx;
}

.about-after-price::before {
  content: "￥";
  font-size: 24rpx;
}

.about-item-count {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*已选商品展示*/

/*store-desc*/

.desc-modal-content {
  width: 100%;
  box-sizing: border-box;
  padding: 20px 10px;
  background-color: #fff;
  border-radius: 5px;
}

.desc-modal-detail {
  width: 100%;
  display: flex;
  margin-top: 10px;
}

.desc-item {
  flex: 1;
}

.desc-item>text {
  text-align: center;
  display: block;
}

.desc-item>text:first-child {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 2px;
}

.desc-item>text:last-child {
  font-size: 28rpx;
  color: #999;
}

.desc-gonggao {
  position: relative;
  text-align: center;
  width: 100%;
  background-image: linear-gradient(90deg, #fff, #333 50%, #fff);
  background-size: 100% 1px;
  background-position: 50%;
  background-repeat: no-repeat;
  margin: 10px auto 5px;
}

.desc-gonggao>text {
  display: inline-block;
  width: 100rpx;
  background-color: #fff;
  color: #999;
  font-size: 28rpx;
  line-height: 200%;
}

.hide-modal {
  width: 100%;
  margin-top: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.desc-delete-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 60rpx;
  border: 1px solid #fff;
}

/*store-desc*/

/*展示活动的列表*/

.popup-activity {
  width: 100%;
  height: 300px;
  background-color: #fff;
  box-sizing: border-box;
  padding: 10px 10px 0;
}

.popup-activity-tite {
  width: 100%;
  font-size: 19px;
  text-align: center;
  box-sizing: border-box;
  padding: 10px;
  height: 45px;
  line-height: 25px;
}

.popup-activity-scroll {
  height: 245px;
}

.pupup-activity-item {
  display: flex;
  height: 50rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  padding: 8rpx;
  margin-bottom: 5px;
}

.shenlue {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

/*展示活动的列表*/

/*多规格选择展示*/

.sort-popup {
  width: 100%;
  box-sizing: border-box;
  padding: 10px;
  height: auto;

}

.sort-popup-top {
  width: 100%;
  display: flex;
}

.sort-title {
  height: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 40rpx;
}

.popup-has-select {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.8);
  padding: 10rpx 0;
  height: 40rpx;
  line-height: 40rpx;
}

.popup-kongbai {
  height: 60rpx;
}

.sort-popup-price {
  width: 100%;
  color: #ff5339;
  font-size: 36rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.sort-popup-price::before {
  content: "￥";
  font-size: 28rpx;
}

.sort-select-list {
  margin-top: 10px;
}

.select-title {
  height: 40rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  padding: 10px 0;
}

.sort-select-item {
  width: 100%;
  height: 60rpx;
}

.sort-botton {
  margin-top: 10px;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: blueviolet;
}
