page {
    font-size: 28rpx;
    letter-spacing: 1rpx;
}

.add_address_con {
    width: 100%;
}

.from_con {
    display: block;
    width: 100%;
}

.top_item {
    background-color: #fff;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.from_item {
    height: 100rpx;
    font-size: 28rpx;
    line-height: 100rpx;
    color: #333;
    border-bottom: 1rpx solid #f0f0f0;
}

.from_item input, .from_item>text {
    flex: 1;
    padding: 0 20rpx;
}

.from_item image {
    width: 45rpx;
    height: 45rpx;
}

.from_textarea {
    height: 200rpx;
    padding-bottom: 20rpx;
}

.from_textarea textarea {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 20rpx;
}

.set_default {
    width: 100%;
    background-color: #fff;
    box-sizing: border-box;
    padding: 0 20rpx;
}


