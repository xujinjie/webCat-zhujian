page {
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
}

.collapse-title {
    height: 130rpx;
    padding: 0 20rpx;
}

.title-left {
    flex: 1;
    height: 100%;
    font-size: 38rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}



.cube {
    width: 200rpx;
    height: 200rpx;
    perspective: 1000rpx;
}

.cube-content {
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    position: relative;
}

.cube-item {
    position: absolute;
    width: 100%;
    height: 100%;
    line-height: 200rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
}

.item-1 {
    transform-origin: left;
    background-color: #09bb07;
    transform: rotateY(90deg) translateX(-100rpx);
}

.item-2 {
    transform-origin: right;
    background-color: #353535;
    transform: rotateY(90deg) translateX(100rpx);
}

.item-3 {
    background-color: #888;
    transform: translateZ(100rpx);
}

.item-4 {
    background-color: #576895;
    transform: translateZ(-100rpx);
}

.item-5 {
    background-color: #e64340;
    transform: rotateX(90deg) translateZ(100rpx);
}

.item-6 {
    background-color: #f70;
    transform: rotateX(-90deg) translateZ(100rpx);
}

.component_con {
    width: 100%;
    padding: 20rpx;
}




.component_item_inner{
    padding: 20rpx;
    flex-wrap: wrap;
    justify-content: space-between;
    background: #fff;
}

.component_item{
    width: 48%;
    border-radius: 10rpx;
    background: #fff;
    box-shadow: 0 0 15px #eee;
    margin-bottom: 30rpx;
}
.component_item_icon{
    padding: 30rpx 0 10rpx;
}

.component_item_text{
    text-align: center;
    padding: 20rpx 0;
    color: #dc4225
}