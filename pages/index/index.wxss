
page{
  width: 100%;
  height: 100%;
  background-color: #f0f0f0
}

.collapse-title{
  height: 150rpx;
  font-size: 38rpx;
  display: flex;
  line-height: 150rpx
}

.title-left{
  height: 100%;
  padding-right: 20rpx;
}

.title-right{
  flex: 1;
  font-size: 28rpx;
  	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}





.cube {
  width: 200rpx;
  height: 200rpx;
  perspective: 1000rpx;
}

.cube-content {
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  position: relative;
}

.cube-item {
  position: absolute;
  width: 100%;
  height: 100%;
  line-height: 200rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx
}

.item-1 {
  transform-origin: left;
  background-color: #09bb07;
  transform: rotateY(90deg) translateX(-100rpx);
}

.item-2 {
  transform-origin: right;
  background-color: #353535;  
  transform: rotateY(90deg) translateX(100rpx);
}

.item-3 {
  background-color: #888;
  
  transform: translateZ(100rpx);
}

.item-4 {
  background-color: #576895;
  
  transform: translateZ(-100rpx);
}

.item-5 {
  background-color: #e64340;
  
  transform: rotateX(90deg) translateZ(100rpx);
}

.item-6 {
  background-color: #FF7700;
  transform: rotateX(-90deg) translateZ(100rpx);
}
