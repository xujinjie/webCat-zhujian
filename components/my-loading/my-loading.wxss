.top_img{
        width: 250rpx;
        height: 250rpx;
        position: relative;
        z-index: 9999;
}

.img_bgc{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 9999;
}

.slip{
         position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10000;
}

.loading_text{
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate3d(-50%,-50%,0);
        z-index: 10000;
        color: #333;
        font-size: 28rpx;
}


.slip{
        -webkit-animation: rotating 1s cubic-bezier(.8,.27,.22,.9) infinite;
        animation: rotating 1s cubic-bezier(.8,.27,.22,.9) infinite;
}

@-webkit-keyframes rotating {
        0% {
                -webkit-transform: rotateZ(0);
                transform: rotateZ(0);
        }

        100% {
                -webkit-transform: rotateZ(360deg);
                transform: rotateZ(360deg);
        }
}

@keyframes rotating {
        0% {
                -webkit-transform: rotateZ(0);
                transform: rotateZ(0);
        }

        100% {
                -webkit-transform: rotateZ(360deg);
                transform: rotateZ(360deg);
        }
}
