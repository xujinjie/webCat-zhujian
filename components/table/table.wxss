.table,.table-body{
  width: 100%;
  background-color: #fff;
  
  font-size: 28rpx
}

.table-head{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1rpx solid #f0f0f0  
}

.table-head-item{
  display: inline-block;
  height: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}

 .head-name{
   width: 40%;
 }

 .head-desc{
   width: 60%
 }


.table-body{
  display: flex;
  border-bottom: 1rpx solid #f0f0f0  
}

.table-body-name{
  width: 40%;
  box-sizing: border-box;
  padding: 0 20rpx;
  line-height: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx
}

.table-body-content{
  width: 60%;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}

.tbody-content-item{
  width: 100%;
  height: auto;
  line-height: 40rpx;
}