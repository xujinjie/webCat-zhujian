.swiper-content {
  width: 100%;
  background-color: #000;
  position: relative
}

.my-swiper {
  width: 100;
  height: 100%;
}

.my-dots {
  position: absolute;
}

.isVertical{
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  left: 50%;
  bottom: 0;
  transform: translate(-50%);
}

.notVertical{
  width: 50rpx;
  bottom: 50%;
  right: 0;
  transform: translate(-50%,50%);
}

.dots-item {
  width: 50rpx;
  height: 50rpx;
  box-sizing: border-box;
}

.dots {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  background-color: #fff;
}

.dotsAtive {
  background-color: red;
}

