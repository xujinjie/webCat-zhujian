.steps {
  display: flex;
}

/*z纵向*/

.steps.steps--vertical {
  height: 100%;
  flex-direction: column;
}

.step.is-vertical {
  display: flex;
}

.step.is-vertical .step__head {
  position: relative;
  width: 10%;
  justify-content: center;
  align-items: center;
}

.step.is-vertical .step__head .step__line {
  position: absolute;
  top: 0;
  left: 50%;
  width: 1px;
  height: 100%;
  transform: translateX(-50%);
}

.step.is-vertical .step__head .step__normal {
  width: 20rpx;
  height: 20rpx;
  border-radius: 20rpx;

  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.step__icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
  text-align: center;
  line-height: 48rpx;
  font-size: 28rpx;
}

.step.is-vertical .step__head .step__icon {
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.step.is-center .step__head, .step.is-horizontal.is-center .step__main {
  text-align: center;
}

/*横向*/

.steps.steps--horizontal {
  width: 100%;
  height: 100%;
}

.step.is-horizontal {
  display: inline-block;
}

.step.is-horizontal .step__head {
  position: relative;
  height: 80rpx;
}

.step.is-horizontal .step__head .step__line {
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
  height: 1px;

  transform: translateY(-50%);
}

.step.is-horizontal.is-center .step__head .step__line {
  left: 50%;
  right: -50%;
}

.step.is-horizontal .step__head .step__normal {
  width: 20rpx;
  height: 20rpx;
  border-radius: 20rpx;

  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.step.is-horizontal .step__head .step__icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.step.is-horizontal.is-center .step__head .step__normal,
.step.is-horizontal.is-center .step__head .step__icon {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.step__main {
  font-size: 24rpx;
  line-height: 1;
}

.step.is-vertical .step__main {
  width: 90%;
}

.step.is-horizontal .step__main {
  height: auto;
}


.step__icon-inner{
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border-width: 1px;
  border-style: solid;
  text-align: center;
  line-height: 48rpx;
}

.step__title{
  padding-bottom: 20rpx;
  line-height: 1;
}

.is-inline{
  display: inline-block
}

.is-block{
  display: block
}

.step__main .is-inline:first-child{
  padding-left: 20rpx;
  padding-right: 20rpx
}
.step__main .is-inline:last-child{
  padding-left: 20rpx;
  padding-right: 20rpx
}


