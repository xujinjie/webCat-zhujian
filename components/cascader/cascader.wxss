.cascader_con {
    width: 100%;
    padding: 0 20rpx;
}

.cascader_top_nav {
    display: flex;
    display: -webkit-flex;
    border-bottom: 1rpx solid #e5e5e5;
}

.cascader_top_nav>text {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
}

.cascader_cancel {
    color: #999;
    padding-left: 10rpx;
}

.cascader_title {
    color: #1c2438;
    text-align: center;
}

.cascader_sure {
    color: #ff7f18;
    text-align: right;
    padding-right: 10rpx;
}

.cascader_tabs {
    height: 70rpx;
    display: flex;
    display: -webkit-flex;
    justify-content: center;
}

.cascader_tabs_item {
    font-size: 24rpx;
    height: 100%;
    line-height: 70rpx;
    max-width: 142rpx;
    box-sizing: border-box;
    padding: 0 10rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-align: center;
}

.select_item_con {
    height: 500rpx;
}

.select_item_con>swiper {
    width: 100%;
    height: 100%;
}

.select_item_con swiper-item {
    width: 100%;
    height: 100%;
}

.select_item_con scroll-view {
    width: 100%;
    height: 100%;
}

.select_item {
    height: 80rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    font-size: 28rpx;
}

.select_item>text {
    flex: 1;
}

.tab_active {
    border-bottom: 1px solid #ff7f18;
    color: #ff7f18;
}
