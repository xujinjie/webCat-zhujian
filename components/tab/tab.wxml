<view class="tab" style='width: 100%;'>
  <view style='width: 100%;height: 80rpx;background-color: #fff;'>
    <scroll-view style='width: 100%;height: 80rpx;white-space: nowrap' scroll-x="true" scroll-with-animation="true" scroll-left="{{scrollLeft}}" >
      <block wx:for="{{data}}" wx:key="{{index}}">
        <view class='tab-item {{index==active?"is-active":""}}' catchtap='tabItemTap' data-index='{{index}}'>
          <view class='item-content'>
            <image src='{{item.src}}' wx:if="{{item.src}}" class='img'></image>
            <my-icon type='{{item.icon}}' size='30' color="{{index==active?'#409eff':''}}" class='my-icon' wx:if="{{!item.src&&item.icon}}"/>
            <text>{{item.label}}</text>
          </view>
        </view>
      </block>
    </scroll-view>
  </view>
</view>