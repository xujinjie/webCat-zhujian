@import "/public/css/animated.wxss";

.desc-modal {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    position: fixed;
    top: 0;
    left: 0;
}

.desc-modal-zhezhao {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    position: absolute;
}

.desc-modal-content {
    width: 80%;
    z-index: 9999;
}

.desc-delete-icon {
    padding: 30rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: center;
}
