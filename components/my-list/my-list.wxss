/* plugin/components/my-list/my-list.wxss */

.list-content {
        letter-spacing: 1px;
        width: 100%;
        box-sizing: border-box;
        padding: 0 20rpx;
        font-size: 28rpx;
        display: flex;
        display: -webkit-flex;
        flex-direction: row;
        align-items: center;
        flex-wrap: nowrap;
}

.list-icon {
        width: 50rpx;
        height: 100%;
        line-height: 70rpx;
}

.list-image {
        height: 100%;
        display: flex;
        display: -webkit-flex;
        justify-content: center;
        align-items: center;
}

.list-title {
        padding-left:10rpx;
        font-size: 28rpx;
        flex: 2;
        height: 100%;
        display: flex;
        align-items: center;
}

.list-detail {
        flex: 2;
        font-size: 28rpx;
}

.list-title-detail {
        width: 100%;
        height: 60rpx;
        box-sizing: border-box;
        padding-left: 20rpx;
        font-size: 28rpx;
}

.list-desc {
        font-size: 28rpx;
        flex: 1;
        text-align: right;
        padding-right: 10rpx;
        display: flex;
        justify-content: flex-end;
        align-items: center;
}

.icon_box {
        height: 100%;
        display: flex;
        align-items: center;
}


.dot_con{
   width: 100rpx;
   height: 100%;
   display: flex;
   justify-content: center;
   align-items: center
}
.dot_con_text{
        display: inline-block;
        width: 40rpx;
        height: 40rpx;
        font-size: 22rpx;
        line-height: 40rpx;
        border-radius: 50%;
        text-align: center
}