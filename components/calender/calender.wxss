@import "../assets/calender.wxss";

.calender-nav{
    padding: 0 20rpx;
}
.active {
    color: #fff !important;
    background-color: #e64340 !important;
    border-radius: 10rpx;
}

.is-radio-both-active {
    color: #fff !important;
    background-color: #e64340;
    border-radius: 10rpx;
}

.is-checkbox-first-active {
    color: #fff !important;
    background-color: #e64340;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}

.is-checkbox-last-active {
    color: #fff !important;
    background-color: #e64340;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.checkbox-disabled {
    color: rgba(0, 0, 0, 0.3) !important;
    background-color: rgba(230, 67, 64, 0.3) !important;
}
