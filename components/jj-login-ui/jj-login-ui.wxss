
.form {
  display: block;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 100%;
  height: auto;
  padding: 30rpx;
}

.form-item, .form-verify {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.icon {
  width: 10%;
  font-size: 40rpx;
  display: block;
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.form-item>input {
  display: block;
  width: 90%;
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.forget-p-w {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 25rpx;
}


.forget-p-w>text {
  display: block;
  width: 50%;
  height: 100%;
  float: left;
  
}

.forget-p-w>text:first-child {
  text-align: left;
  color: gray;
}

.forget-p-w>text:last-child {
  text-align: right;
  color: #FF7700;
}
