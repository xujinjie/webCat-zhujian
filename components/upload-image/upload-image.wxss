.upload-image {
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        background-color: #fff;
}

.image-item {
        position: relative;
        box-sizing: border-box;
        padding: 10rpx;
        border-radius: 10rpx;
        width: 25%;
}

.the-image, .select-image {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 10rpx;
}

.select-image {
        border: 1px dashed #c0ccda;
        text-align: center;
}

.image-item-delete {
        position: absolute;
        top: 0;
        right: 0;
        transform: translate3d(25%,-25%,0);
        z-index: 10
}

.show-image {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
        overflow: hidden;
        background-color: rgba(0, 0, 0, 0.8);
}

.show-image-container {
        display: flex;
        justify-content: center;
        align-items: center;
}

.image-direction-vertical {
        position: fixed;
        transform: rotateZ(90deg);
}

.image-direction-horizontal {
        transform: rotateZ(0);
}

.dot-direction-vertical {
        transform: rotateZ(90deg);
        bottom: 10rpx;
}

.dot-direction-horizontal {
        transform: rotateZ(0);
        top: 10rpx;
}

.dot {
        height: 50rpx;
        border-radius: 10rpx;
        position: fixed;
        right: 20rpx;
        color: #fff;
        text-align: center;
        line-height: 50rpx;
        font-size: 24rpx;
        z-index: 9999;
}

.direction-control {
        position: fixed;
        line-height: 48rpx;
        font-size: 20rpx;
        z-index: 9999;
        border: 1px solid #fff;
        color: #fff;
        height: 50rpx;
        width: 120rpx;
        box-sizing: border-box;
        padding: 0 10rpx;
        text-align: center;
        border-radius: 10rpx;
}

.direction-control-horizontal {
        bottom: 40rpx;
        left: 50%;
        transform: translateX(-50%);
}

.direction-control-vertical {
        left: 40rpx;
        top: 50%;
        transform: translateY(-50%) rotateZ(90deg);
}
